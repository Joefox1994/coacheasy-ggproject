<!DOCTYPE html>
<html>
<head>
  <title>Coacheasy</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div align="right">
		<% if coach_signed_in? %>
			hello <%= current_coach.firstname%> | <%= link_to 'My Dashboard', dashboard_index_path %> | <%= link_to "Sign out", destroy_coach_session_path, :method => :delete %>
		<% else %>
