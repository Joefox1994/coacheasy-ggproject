<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b><br />
  <%= @program.title %>
</p>

<p>
  <b>Body:</b><br />
  <%= @program.cweekcomments %>
</p>


<%= link_to 'Edit', edit_program_path(@program) %> |
<%= link_to 'Back', programs_path %>

<br /><br /><br />
<i>Comments</i>

  <p>
<% if @program.comment %>
    <b>Comment:</b>
    <%= @program.comment.body %>
    <br />
    <%= link_to 'Edit', edit_program_comment_path(@program.comment) %>
    </p>  



   
  <% else %>
  
  <%= form_for([@program, @program.build_comment]) do |f| %>
    <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
  
  <% end %>





